<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    >

    <TextView
        android:id="@+id/tvUserType"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:hint="user type"
        android:layout_height="wrap_content" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="#00000000"
            android:hint="Phone Number"
            android:letterSpacing="0.1"
            android:inputType="phone"
            android:textColor="#243c4b"
            android:textColorHint="#9E9EAA"
            android:textStyle="bold"
            android:textSize="24sp"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.001dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="#5B5B65"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:passwordToggleContentDescription="your pass word"
        app:passwordToggleEnabled="true"
        >

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="Password"
            android:inputType="textPassword"
            android:letterSpacing="0.1"
            android:textColor="#243c4b"
            android:textColorHint="#9E9EAA"
            android:textStyle="bold"
            android:textSize="24sp"/>


    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.001dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="#5B5B65"/>

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="607px"
        android:layout_height="117px"
        android:layout_gravity="center"
        android:onClick="goSignIn"
        android:layout_marginBottom="25dp"
        android:background="@drawable/signin"/>



</LinearLayout>